<spring:beans xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:jdbc="http://www.springframework.org/schema/jdbc"
              xmlns="http://camel.apache.org/schema/spring"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.1.xsd">

    <jdbc:embedded-database id="datasource" type="H2">
        <jdbc:script location="db-schema.sql"/>
    </jdbc:embedded-database>

    <jdbc:initialize-database data-source="datasource">
        <jdbc:script location="classpath:db-data.sql"/>
    </jdbc:initialize-database>

    <camelContext id="spring-jdbc">
        <route>
            <from uri="sql:select name from jdbc_test?dataSource=#datasource&amp;consumer.initialDelay=500&amp;consumer.delay=60000"/>
            <transform>
                <simple>Hello ${body['NAME']}</simple>
            </transform>
            <to uri="mock:result" />
        </route>
    </camelContext>

</spring:beans>
